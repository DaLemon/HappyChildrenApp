<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addsubNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="輸入n1"
        android:text=""/>

    <EditText
        android:id="@+id/addsubNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="輸入n2"
        android:text=""/>

    <EditText
        android:id="@+id/addsubAns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="輸入答案"
        android:text="" />

    <EditText
        android:id="@+id/addsubLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="輸入單元名稱"
        android:text="" />

    <Button
        android:id="@+id/addsubsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>